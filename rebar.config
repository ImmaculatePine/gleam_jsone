{erl_opts, [debug_info]}.
{src_dirs, ["src", "gen/src"]}.

{profiles, [
    {test, [{src_dirs, ["src", "test", "gen/src", "gen/test"]}]}
]}.

{plugins, [rebar3_hex, {rebar3_autotest, "0.1.1"}]}.
{project_plugins, [rebar_gleam]}.

{deps, [
    {gleam_stdlib, {git, "git://github.com/gleam-lang/stdlib.git", {branch, "master"}}},
    {jsone, "1.5.2"}
]}.
